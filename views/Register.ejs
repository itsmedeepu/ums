<%- include('./assets/Header'); -%>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 mt-5">
        <div class="card shadow-lg col-lg-8 co-md-6 col-sm-12 m-auto">
          <div class="card-header bg-info">
            <h2>User Registration Page</h2>
          </div>
          <div class="card-body">
            <form class="col-lg-4 col-md-6 col-sm-12 ms-2" id="register-form">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input
                  class="form-control"
                  type="text"
                  name="name"
                  id="name"
                  placeholder="Enter Name"
                  maxlength="20"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                  class="form-control"
                  type="email"
                  name="email"
                  id="email"
                  placeholder="Enter Email"
                  maxlength="40"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Password</label>
                <input
                  class="form-control"
                  type="password"
                  name="password"
                  placeholder="Create Password"
                  maxlength="15"
                  required
                  id="password"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input
                  class="form-control"
                  type="password"
                  name="cpassword"
                  id="cpassword"
                  placeholder="Confirm Password"
                  maxlength="15"
                  required
                />
              </div>
              <div class="mb-3">
                <button type="button" id="register" class="btn btn-info">
                  Register
                </button>
                <button
                  type="reset"
                  style="float: right"
                  class="btn btn-warning"
                >
                  Reset
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<%-include("./assets/Footer");-%>
